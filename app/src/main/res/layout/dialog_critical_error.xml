<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/tvErrorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="#CC000000"
            android:text="Что то пошло не так. Попробуйте позже"/>

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_below="@+id/tvErrorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="17sp"
            android:text="Злые карлики что то поломали у нас. Попробуйте немного позже, возможно мы их выловим к этому моменту."/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center|center_vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvActionOne"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:maxLines="1"
            android:gravity="center"
            android:textColor="#009FE8"
            android:layout_marginRight="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:text="@string/exit"/>

        <TextView
            android:id="@+id/tvActionTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:maxLines="1"
            android:gravity="center"
            android:textColor="#009FE8"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:text="@string/repeat"/>

    </LinearLayout>


</LinearLayout>